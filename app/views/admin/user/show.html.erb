<div class="container-fluid py-4">
  <div class="mb-4">
    <%= link_to admin_users_path, class: "btn btn-outline-secondary btn-sm" do %><i class="fas fa-arrow-left mr-1"></i> QUAY LẠI<% end %>
  </div>

  <div class="row">
    <div class="col-lg-4 text-center">
      <div class="card shadow-sm border-0 py-5">
        <img src="<%= @user['avatarUrl'] || 'https://via.placeholder.com/150' %>" class="rounded-circle mx-auto mb-3 shadow-sm" style="width: 150px; height: 150px; object-fit: cover;">
        <h4 class="font-weight-bold"><%= @user['name'] %></h4>
        <div class="rank-badge-premium rank-<%= (@user['rank'] || 'bronze').downcase %> mb-3"><%= @user['rank'] || 'BRONZE' %></div>
        <span class="badge <%= @user['isActive'] ? 'badge-success' : 'badge-danger' %> px-3 py-2"><%= @user['isActive'] ? 'ĐANG HOẠT ĐỘNG' : 'BỊ KHÓA' %></span>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white font-weight-bold">DỮ LIỆU TÀI KHOẢN</div>
        <table class="table mb-0">
          <tr><td class="bg-light text-muted" width="200">Username:</td><td><b><%= @user['username'] %></b></td></tr>
          <tr><td class="bg-light text-muted">Email:</td><td><%= @user['email'] %></td></tr>
          <tr><td class="bg-light text-muted">Xác thực:</td><td><%= @user['isVerified'] ? '✅ Đã xác thực' : '❌ Chưa xác thực' %></td></tr>
          <tr><td class="bg-light text-muted">Ngày tham gia:</td><td><%= @user['startDate'] %></td></tr>
        </table>
      </div>
    </div>
  </div>
</div>