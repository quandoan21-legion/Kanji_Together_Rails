<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title font-weight-bold">Quản Lý Đề Thi</h3>
    <%= link_to new_admin_exam_path, class: "btn btn-primary btn-sm shadow-sm" do %>
      <i class="fas fa-plus-circle"></i> Tạo Đề Mới
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
        <tr>
          <th class="text-center" style="width: 50px;">ID</th>
          <th>Tên Đề Thi</th>
          <th>Loại</th>
          <th class="text-center">Rank</th>
          <th class="text-center">Thời gian</th>
          <th class="text-center">Số câu</th>
          <th class="text-center">Điểm đậu</th>
          <th class="text-center" style="width: 150px;">Thao tác</th>
        </tr>
        </thead>
        <tbody>
        <% if @exams.any? %>
          <% @exams.each do |exam| %>
            <tr>
              <td class="text-center text-muted"><%= exam['id'] %></td>
              <td class="font-weight-bold text-primary"><%= exam['name'] %></td>
              <td>
                <span class="badge badge-info"><%= exam['examType'] %></span>
              </td>
              <td class="text-center"><span class="badge badge-warning"><%= exam['targetRank'] %></span></td>
              <td class="text-center"><%= exam['duration'] %> phút</td>
              <td class="text-center font-weight-bold"><%= exam['totalQuestions'] %></td>
              <td class="text-center text-success"><%= exam['passScore'] %></td>
              <td class="text-center">
                <%= link_to edit_admin_exam_path(exam['id']), class: "btn btn-sm btn-outline-primary mr-1" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to admin_exam_path(exam['id']), method: :delete, data: { confirm: "Xóa đề thi này?" }, class: "btn btn-sm btn-outline-danger" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr><td colspan="8" class="text-center py-4 text-muted">Chưa có đề thi nào.</td></tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>