<%# app/views/admin/lessons/show.html.erb %>

<div class="container-fluid pt-3">
  <%# --- HEADER --- %>
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3 class="m-0 text-dark font-weight-bold">
      <i class="fas fa-book-reader text-success mr-2"></i>Chi tiết Bài học #<%= @lesson["id"] %>
    </h3>
    <div>
      <%= link_to edit_admin_lesson_path(@lesson["id"]), class: "btn btn-primary font-weight-bold shadow-sm" do %>
        <i class="fas fa-edit mr-1"></i> Chỉnh sửa
      <% end %>
      <%= link_to admin_lessons_path, class: "btn btn-secondary font-weight-bold shadow-sm ml-2" do %>
        <i class="fas fa-arrow-left mr-1"></i> Quay lại
      <% end %>
    </div>
  </div>

  <div class="row">
    <%# --- CỘT TRÁI: THÔNG TIN CƠ BẢN --- %>
    <div class="col-md-4">
      <div class="card shadow-sm mb-4 border-left-success">
        <div class="card-header bg-white py-3">
          <h6 class="m-0 font-weight-bold text-success">Thông tin chung</h6>
        </div>
        <div class="card-body text-center">
          <h1 class="text-dark font-weight-bold mb-3"><%= @lesson["kanji"] %></h1>
          <div class="mb-4">
            <span class="badge badge-warning px-3 py-2 mr-1">JLPT N<%= @lesson["jlpt"] %></span>
            <span class="badge badge-success px-3 py-2">Hoạt động</span>
          </div>
          <hr>
          <div class="text-left small text-muted">
            <div class="mb-2">
              <i class="far fa-clock mr-2"></i>Tạo ngày:
              <span class="text-dark font-weight-bold">
                <%= @lesson["create_at"] ? Time.parse(@lesson["create_at"]).strftime("%d/%m/%Y %H:%M") : "---" %>
              </span>
            </div>
            <div>
              <i class="fas fa-history mr-2"></i>Cập nhật:
              <span class="text-dark font-weight-bold">
                <%= @lesson["edit_at"] ? Time.parse(@lesson["edit_at"]).strftime("%d/%m/%Y %H:%M") : "---" %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <%# Mô tả %>
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
          <h6 class="m-0 font-weight-bold text-dark">Mô tả & Ghi chú</h6>
        </div>
        <div class="card-body">
          <% if @lesson["lessonDescription"].present? %>
            <div class="text-dark" style="white-space: pre-line; line-height: 1.5;">
              <%= @lesson["lessonDescription"] %>
            </div>
          <% else %>
            <div class="text-muted font-italic small">Chưa có mô tả.</div>
          <% end %>
        </div>
      </div>
    </div>

    <%# --- CỘT PHẢI: DANH SÁCH KANJI --- %>
    <div class="col-md-8">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-layer-group mr-2"></i>Danh sách Kanji trong bài
          </h6>
          <%# LẤY ĐÚNG KEY kanji_list TỪ LOG %>
          <% kanjis = @lesson["kanji_list"] || [] %>
          <span class="badge badge-primary badge-pill"><%= kanjis.size %> chữ</span>
        </div>

        <div class="card-body bg-light">
          <% if kanjis.any? %>
            <div class="row">
              <% kanjis.each do |k| %>
                <div class="col-lg-6 col-xl-4 mb-3">
                  <div class="card border-0 shadow-sm h-100 kanji-card">
                    <div class="card-body p-3">
                      <div class="d-flex">
                        <div class="mr-3">
                          <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center shadow-sm" style="width: 55px; height: 55px; font-size: 26px; font-weight: bold;">
                            <%= k["kanji"] %>
                          </div>
                        </div>
                        <div style="flex: 1; overflow: hidden;">
                          <h5 class="font-weight-bold text-dark mb-1 text-truncate"><%= k["translation"] %></h5>
                          <div class="small text-muted mb-1">N<%= k["jlpt"] %> - <%= k["meaning"] %></div>
                          <div class="small text-muted text-truncate">On: <%= k["on_pronunciation"] %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-5 text-muted">
              <i class="fas fa-box-open fa-3x mb-3 text-gray-300"></i>
              <h5>Chưa có Kanji nào trong bài học này.</h5>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .kanji-card:hover { transform: translateY(-3px); transition: 0.2s; box-shadow: 0 4px 10px rgba(0,0,0,0.1) !important; }
</style>