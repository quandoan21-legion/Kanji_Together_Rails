<div class="container-fluid pt-3">
  <div class="row mb-4 align-items-center">
    <div class="col-sm-8">
      <h3 class="m-0 text-dark font-weight-bold">
        <i class="fas fa-layer-group text-info mr-2"></i>Chi tiết Khóa học
      </h3>
    </div>
    <div class="col-sm-4 text-right">
      <%= link_to edit_admin_course_path(@course["id"]), class: "btn btn-primary rounded-pill px-3 mr-2" do %>
        <i class="fas fa-edit mr-1"></i>Sửa
      <% end %>
      <%= link_to admin_courses_path, class: "btn btn-secondary rounded-pill px-3" do %>
        <i class="fas fa-arrow-left mr-1"></i>Quay lại
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <div class="row">
        <div class="col-md-8">
          <h4 class="font-weight-bold mb-3"><%= @course["name"] || "---" %></h4>
          <p class="text-muted"><%= @course["description"] || "---" %></p>
          <div class="mb-2"><strong>Danh mục:</strong> <%= @course["category"] || "---" %></div>
          <div class="mb-2"><strong>Thời gian hoàn thành:</strong> <%= @course["time_to_finish"] || "---" %></div>
          <div class="mb-2"><strong>Lesson IDs:</strong> <%= Array(@course["lesson_ids"]).join(", ") %></div>
        </div>
        <div class="col-md-4">
          <% if @course["thumbnail_url"].present? %>
            <div class="mb-3">
              <div class="text-muted small mb-1">Thumbnail</div>
              <img src="<%= @course["thumbnail_url"] %>" class="img-fluid rounded border" alt="Thumbnail">
            </div>
          <% end %>
          <% if @course["cover_image_url"].present? %>
            <div>
              <div class="text-muted small mb-1">Cover</div>
              <img src="<%= @course["cover_image_url"] %>" class="img-fluid rounded border" alt="Cover">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
