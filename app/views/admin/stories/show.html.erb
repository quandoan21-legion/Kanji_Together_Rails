<style>
    .custom-scroll {
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: #cbd5e0 #f1f5f9;
    }
    .custom-scroll::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scroll::-webkit-scrollbar-thumb {
        background-color: #cbd5e0;
        border-radius: 4px;
    }

    .kanji-hero {
        font-size: 3.5rem;
        line-height: 1;
        color: #2d3748;
    }

    .meta-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #718096;
        font-weight: 700;
        margin-bottom: 2px;
    }

    .nav-tabs .nav-link {
        color: #495057;
        font-weight: 600;
        border: none;
        border-bottom: 3px solid transparent;
        padding: 0.75rem 1.25rem;
    }
    .nav-tabs .nav-link.active {
        color: #4e73df;
        border-bottom: 3px solid #4e73df;
        background: transparent;
    }
    .nav-tabs .nav-link:hover {
        border-color: transparent transparent #d1d3e2;
    }
    .tab-content {
        padding-top: 1.5rem;
    }
</style>

<div class="container-fluid d-flex flex-column bg-light" style="height: calc(100vh - 60px);">

  <div class="flex-shrink-0 py-2 border-bottom bg-white px-3 shadow-sm d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <%= link_to admin_stories_path, class: "btn btn-light btn-sm mr-3 border text-muted hover-shadow" do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
      <h5 class="m-0 font-weight-bold text-dark">
        Chi tiết câu chuyện: <span class="text-primary mx-1"><%= @story['kanji_text'] %></span>
      </h5>
    </div>

    <div>
      <%
        status = @story['status'].to_s.upcase
        if status == 'PENDING'
          badge_class, badge_text = 'badge-warning', 'Chờ duyệt'
        elsif status == 'APPROVED'
          badge_class, badge_text = 'badge-success', 'Đã duyệt'
        elsif status == 'REJECTED'
          badge_class, badge_text = 'badge-danger', 'Đã từ chối'
        else
          badge_class, badge_text = 'badge-secondary', 'Không xác định'
        end
      %>
      <span class="badge <%= badge_class %> px-3 py-2"><%= badge_text %></span>
    </div>
  </div>

  <% if @story['status'].to_s.upcase == 'PENDING' %>
    <div class="flex-grow-1 d-flex overflow-hidden" style="height: calc(100% - 60px);">

      <div class="col-lg-4 h-100 p-0 border-right d-flex flex-column bg-white">
          <div class="px-3 py-2 bg-secondary text-white small font-weight-bold d-flex justify-content-between align-items-center flex-shrink-0">
            <span><i class="fas fa-user mr-1"></i> CÂU CHUYỆN ĐÓNG GÓP</span>
            <span class="badge badge-light text-dark">ID: #<%= @story['id'] %></span>
          </div>

          <div class="flex-grow-1 custom-scroll p-3 d-flex flex-column">
            <div class="d-flex align-items-center bg-light rounded p-3 mb-3 border">
              <div class="kanji-hero font-weight-bold mr-4"><%= @story['kanji_text'] %></div>
              <div class="border-left pl-3 flex-grow-1">
                <div>
                  <div class="meta-label text-danger">Kanji ID</div>
                  <div class="h5 text-primary font-weight-bold m-0">#<%= @story['kanji_id'] %></div>
                </div>
                <% if @story['user_translation'].present? %>
                  <div class="mt-2">
                    <div class="meta-label text-danger">Hán Việt (Đóng góp)</div>
                    <div class="font-weight-bold text-danger"><%= @story['user_translation'] %></div>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="mb-3">
              <div class="meta-label text-primary mb-1"><i class="fas fa-book-reader"></i> Câu chuyện</div>
              <div class="p-3 bg-white border rounded font-italic text-dark shadow-sm" style="border-left: 4px solid #4e73df !important; max-height: 200px; overflow-y: auto;">
                "<%= @story['kanji_story'] || 'Chưa có câu chuyện' %>"
              </div>
            </div>

            <% if @story['user_meaning'].present? %>
              <div class="mb-3">
                <div class="meta-label text-info mb-1"><i class="fas fa-lightbulb"></i> Ý nghĩa</div>
                <div class="p-2 bg-light rounded border text-dark small">
                  <%= @story['user_meaning'] %>
                </div>
              </div>
            <% end %>

            <% if @story['user_vocabulary'].present? || @story['user_examples'].present? %>
              <div class="flex-grow-1 border rounded bg-white p-2" style="min-height: 150px;">
                <div class="meta-label text-dark mb-1 ml-1"><i class="fas fa-list"></i> Từ vựng & Ví dụ</div>
                <div class="small px-2" style="white-space: pre-line; overflow-y: auto; max-height: 130px;">
                  <% if @story['user_vocabulary'].present? %>
                    <strong>Từ vựng:</strong>
                    <%= @story['user_vocabulary'] %>
                  <% end %>
                  <% if @story['user_examples'].present? %>
                    <hr class="my-2">
                    <strong>Ví dụ:</strong>
                    <%= @story['user_examples'] %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="p-3 bg-light border-top flex-shrink-0">
            <%= form_with url: approve_admin_story_path(@story['id']), method: :put, local: true, style: "margin: 0;" do |f| %>
              <button type="submit" class="btn btn-success btn-block font-weight-bold py-2 shadow-sm mb-2" onclick="return confirm('Xác nhận duyệt câu chuyện này?');">
                <i class="fas fa-check-circle mr-2"></i> DUYỆT BÀI
              </button>
            <% end %>
            <button type="button" class="btn btn-outline-danger btn-block font-weight-bold shadow-sm" data-toggle="modal" data-target="#rejectModal">
              <i class="fas fa-times mr-2"></i> TỪ CHỐI
            </button>
          </div>
        </div>

        <div class="col-lg-8 h-100 p-0 d-flex flex-column bg-light">
          <div class="px-3 py-2 bg-primary text-white small font-weight-bold flex-shrink-0">
            <i class="fas fa-info-circle mr-1"></i> THÔNG TIN BỔNGÓ
          </div>

          <div class="flex-grow-1 custom-scroll p-4">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="card border-0 shadow-sm">
                  <div class="card-body p-3">
                    <h6 class="card-title font-weight-bold text-dark mb-2">
                      <i class="fas fa-user text-info mr-1"></i> Thông tin người đóng góp
                    </h6>
                    <div class="small">
                      <div class="mb-2">
                        <span class="text-muted">Email:</span>
                        <strong><%= @story['user_email'] || 'N/A' %></strong>
                      </div>
                      <div class="mb-2">
                        <span class="text-muted">Ngày tạo:</span>
                        <strong><%= @story['create_at'].present? ? Time.parse(@story['create_at']).strftime("%d/%m/%Y %H:%M") : 'N/A' %></strong>
                      </div>
                      <div>
                        <span class="text-muted">ID Người tạo:</span>
                        <strong><%= @story['create_by'] || 'N/A' %></strong>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <div class="card border-0 shadow-sm">
                  <div class="card-body p-3">
                    <h6 class="card-title font-weight-bold text-dark mb-2">
                      <i class="fas fa-pencil-alt text-warning mr-1"></i> Thông tin chi tiết
                    </h6>
                    <div class="small">
                      <% if @story['user_num_strokes'].present? %>
                        <div class="mb-2">
                          <span class="text-muted">Số nét:</span>
                          <strong><%= @story['user_num_strokes'] %></strong>
                        </div>
                      <% end %>
                      <% if @story['user_radical'].present? %>
                        <div class="mb-2">
                          <span class="text-muted">Bộ thủ:</span>
                          <strong><%= @story['user_radical'] %></strong>
                        </div>
                      <% end %>
                      <% if @story['user_components'].present? %>
                        <div class="mb-2">
                          <span class="text-muted">Thành phần:</span>
                          <strong><%= @story['user_components'] %></strong>
                        </div>
                      <% end %>
                      <% if @story['user_onyomi'].present? %>
                        <div class="mb-2">
                          <span class="text-muted">Onyomi:</span>
                          <strong class="text-danger"><%= @story['user_onyomi'] %></strong>
                        </div>
                      <% end %>
                      <% if @story['user_kunyomi'].present? %>
                        <div class="mb-2">
                          <span class="text-muted">Kunyomi:</span>
                          <strong class="text-success"><%= @story['user_kunyomi'] %></strong>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  <% end %>

</div>

<%# ===== REJECT MODAL ===== %>
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content border-0 shadow-lg">
      <div class="modal-header bg-danger text-white py-3">
        <h5 class="modal-title font-weight-bold"><i class="fas fa-times-circle mr-2"></i>Từ chối câu chuyện</h5>
        <button type="button" class="close text-white" data-dismiss="modal"><span>&times;</span></button>
      </div>
      <%= form_with url: reject_admin_story_path(@story['id']),
                    method: :put,
                    local: true do |f| %>
        <div class="modal-body p-4">
          <div class="form-group">
            <label class="font-weight-bold text-dark">Lý do từ chối (Bắt buộc)</label>
            <%= f.text_area :reason,
                            placeholder: "Nhập lý do từ chối...",
                            rows: 5,
                            class: "form-control #{@errors.present? ? 'is-invalid' : ''}",
                            required: true %>
            <small class="form-text text-muted mt-1">Lý do này sẽ được gửi tới người đóng góp.</small>
          </div>
        </div>
        <div class="modal-footer border-top py-3">
          <button type="button" class="btn btn-secondary rounded-pill px-4" data-dismiss="modal">Hủy</button>
          <%= f.submit "Từ chối", class: "btn btn-danger rounded-pill px-4 font-weight-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
