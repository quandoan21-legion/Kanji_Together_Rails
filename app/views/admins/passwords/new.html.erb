<p class="text-center text-muted mb-4">Nhập email để nhận mã khôi phục mật khẩu</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="input-group">
    <i class="fas fa-paper-plane input-icon"></i>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form-control",
                      placeholder: "Email của bạn",
                      required: true,
                      oninvalid: "this.setCustomValidity('Bạn phải điền email khôi phục!')",
                      oninput: "this.setCustomValidity('')" %>
  </div>

  <%= f.submit "GỬI MÃ KHÔI PHỤC", class: "btn-auth" %>

<% end %>

<div class="text-center mt-4">
  <%= link_to "Quay lại đăng nhập", new_session_path(resource_name), class: "small font-weight-bold text-muted" %>
</div>